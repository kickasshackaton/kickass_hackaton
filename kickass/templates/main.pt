<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="layout">
  <head>
    <title>Bootstrap 101 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="${request.static_url('kickass:static/assets/css/bootstrap.min.css')}" rel="stylesheet">
    <link href="${request.static_url('kickass:static/assets/css/style.css')}" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <div id="wrap">

      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Kick Ass</a>
        </div>
      </nav>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Coursera</a></li>
          <li><a href="#">Read It</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Eliah Nikans</a></li>
          <li><a href="#">Sign out</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->

      <div class="hero-unit"></div>

      <div metal:define-slot="content"></div>

      <!-- Modal -->
      <div class="modal fade" id="newCourseCommitment" tabindex="-1" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">New Course Commitment!</h4>
            </div>
            <div class="modal-body">
              <form class="form-inline" role="form">
                <div>
                I pledge
                $ <input type="password" class="form-control"  id="bid" placeholder="100">
                which is substantial for me
                </div>
                  <div>
                to pass
                  <select class="form-control" id="name">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                  </select>
                </div>
                  <div>
                or else shall my money go to
                  <select class="form-control" id="charity_fund">
                    <option tal:repeat="current charity_funds['anticharity']">${current}</option>
                    <option tal:repeat="current charity_funds['charity']">${current}</option>
                  </select>
                </div>
                  <div>
                  Let my friend
                  <select class="form-control" id="observer">
                    <option value="0">I have no friends</option>
                    <option tal:repeat="current list_users">${current.name}</option>
                  </select>
                  witness!
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">I yield</button>
              <button type="button" class="btn btn-primary">So be it!</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
    </div>
    <div id="footer">Eat shit</div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="${request.static_url('kickass:static/assets/js/bootstrap.min.js')}"></script>
  </body>
</html>