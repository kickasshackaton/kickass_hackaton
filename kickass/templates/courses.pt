<div metal:use-macro="layout">
    <div metal:fill-slot="content">

        <div class="container courses-list">
            <header class="row" tal:repeat="current targets" class="pledge-course">
                <div class="col-lg-3 col-xs-3"><h1>My Commitments</h1></div>
                <div class="col-lg-9 col-xs-9">
                    <a href="#" data-toggle="modal" data-target="#newCourseCommitment">New Course Commitment!</a>
                </div>
            </header>

            <div class="row" tal:repeat="current targets" class="pledge-course">
                <div class="col-lg-3 col-xs-3">
                  <div class="course-name">${current.name}</div>
                </div>
                <!--${current.type}-->
                <!--${current.deadline}-->
                <div class="col-lg-7 col-xs-7">
                  <div class="progress">
                      <div class="progress-bar progress-bar-success" style="width:${current.current_progress}%">
                        <span class="sr-only"></span>
                      </div>
                      <div class="progress-bar progress-bar-info" style="width:${current.planned_progress}%">
                        <span class="sr-only"></span>
                      </div>
                  </div>
                </div>
                <div class="col-lg-2 col-xs-2">
                  <div tal:condition="current.overseer.id != current.user.id" class="overseer pull-left"><img src="/static/assets/img/userpic-small.png" /></div>
                  <a class="bid btn btn-success">$${int(current.bid)}</a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newCourseCommitment" tabindex="-1" role="dialog">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">New Course Commitment!</h4>
    </div>
    <div class="modal-body">
      <form class="form-inline" role="form">
        <div>
        I pledge
        $ <input type="text" class="form-control"  id="bid" placeholder="100">
        which is substantial for me
        </div>
          <div>
        to pass
          <select class="form-control" id="name">
            <option tal:repeat="current enrollable">${current['topic']['name']}</option>
          </select>
        </div>
          <div>
        or else shall my money go to
          <select class="form-control" id="charity_fund">
            <option tal:repeat="current charity_funds['anticharity']">${current}</option>
            <option tal:repeat="current charity_funds['charity']">${current}</option>
          </select>
        </div>
          <div>
          Let my friend
          <select class="form-control" id="observer">
            <option value="0">I have no friends</option>
            <option tal:repeat="current list_users">${current.name}</option>
          </select>
          witness!
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">I yield</button>
      <button type="button" class="btn btn-primary">So be it!</button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->